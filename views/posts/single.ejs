<% include ../tmpl/header %>

<div class="wrap">
	<!--[if lt IE 7]>
	<p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a
			href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
	<![endif]-->

	<div class="layout">

		<div class="header">
			<div class="row inner">

				<div class="col-12 nav">
					<div class="nav-brand">
						<a href="/"><%= settings.site.name %></a>
					</div>
					<ul class="nav-ul right">
						<li><a href="/">Home</a></li>
						<li class="active"><a href="/posts">Posts</a></li>
						<li><a href="/doc">Notes</a></li>
						<li><a href="/about">About</a></li>
					</ul>
				</div>
			</div>
		</div>
		<div class="main">

			<div class="row posts">

				<!--Post-Content-->
				<div class="col-12">

					<% var post = pageContent.post; %>
					<div class="panel post">
						<div class="panel-header">
							<div class="title">Mood</div>
						</div>
						<div class="panel-body">
							<div class="post-title">
								<h3><a href="/post/<%= post._id %>"><%= post.name %></a></h3>
							</div>
							<div class="post-content">
								<%= post.content %>
							</div>
						</div>
						<div class="panel-footer">
							<div class="post-meta">
								<div class="inner">
									<span class="post-date left"><%= post.date %></span>
									<span class="post-author right"><%= post.author %></span>
								</div>
							</div>
						</div>
					</div>
				</div>

			</div>

		</div>
		<div class="footer">
			<div class="row inner">
				<div class="col-12 center text-right state">
					<p>The very beginning mind itself is the most accomplished mind of true
						enlightenment .</p>

					<p>不忘初心，方得终始。</p>
				</div>
			</div>
		</div>
	</div>

</div>

<% include ../tmpl/footer %>