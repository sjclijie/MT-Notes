<% include ../tmpl/header %>

<div class="wrap">
	<!--[if lt IE 7]>
	<p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a
			href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
	<![endif]-->

	<div class="layout">

		<div class="header">

			<div class="inner">
				<div class="col-12 nav">
					<div class="nav-brand">
						<a href="/">Thonatos.Yang</a>
					</div>
					<ul class="nav-ul right">
						<li><a href="/">Home</a></li>
						<li class="active"><a href="/doc">Notes</a></li>
						<li><a href="/about">About</a></li>
					</ul>
				</div>
			</div>
		</div>

		<div class="main">
			<% if (pageContent.render){ %>

			<div class="document">
				<h3 class="title"><%= pageContent.title %></h3>

				<div class="content">
					<%- pageContent.content %>
				</div>
				<div class="comments">

				</div>
			</div>

			<% }else{ %>

			<div class="document">
				<h3 class="title">Can't get ?</h3>

				<div class="content">
					<pre>Something wrong, you may try again.</pre>
					<%= pageContent.content %>
				</div>
			</div>

			<div class="info">
				<h4>Bug Report:</h4>
				<a class="button" href="http://weibo.com/thonatos"><i class="fa fa-weibo"> @Thonatos</i></a>
				<a class="button" href="mailto://thonatos.yang@gmail.com"><i class="fa fa-mail-forward">
						thonatos.yang@gmail.com</i></a>
			</div>

			<% } %>

		</div>

		<div class="footer">
			<div class="inner">
				<div class="col-12 center text-right state">
					<p>The very beginning mind itself is the most accomplished mind of true
						enlightenment .</p>

					<p>不忘初心，方得终始。</p>
				</div>
			</div>
		</div>
	</div>

</div>

<% include ../tmpl/footer %>

