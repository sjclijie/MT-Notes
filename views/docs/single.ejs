<head>

	<% include ../tmpl/header_meta.ejs %>

	<title><%= pageTitle %> - <%= settings.site.name %></title>

	<% include ../tmpl/header_pub.ejs %>

	<link rel="stylesheet" href="/public/css/css-page/docs-single.min.css">

	<!-- GLOBAL JAVASCRIPT -->
	<script>
		PAGE_NAME = 'docs-single';
	</script>

	<% MENU_ACTIVE = 'Docs'; %>

</head>
<body>

<div class="wrap">

	<div class="layout">

		<% include ../tmpl/layout_header.ejs %>

		<div class="main">
			<% if (pageContent.render){ %>

			<div class="document">
				<h3 class="title"><%= pageContent.title %></h3>

				<div class="content">
					<%- pageContent.content %>
				</div>
				<div class="comments">

				</div>
			</div>

			<% }else{ %>

			<div class="document">
				<h3 class="title">Can't get ?</h3>

				<div class="content">
					<pre>Something wrong, you may try again.</pre>
					<%= pageContent.content %>
				</div>
			</div>

			<% } %>

		</div>

		<div class="footer">
			<div class="inner">
				<div class="col-12 center text-right state">
					<p>The very beginning mind itself is the most accomplished mind of true
						enlightenment .</p>

					<p>不忘初心，方得终始。</p>
				</div>
			</div>
		</div>
	</div>

</div>

<% include ../tmpl/footer_pub.ejs %>
<% include ../tmpl/footer_sea.ejs %>

</body>
</html>

