<% include ../tmpl/header %>

<div class="wrap">
		<!--[if lt IE 7]>
		<p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a
				href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
		<![endif]-->

		<div class="layout">

				<div class="main">
						<% if (pageContent.render){ %>

						<div class="document">
								<h3 class="title"><%= pageContent.title %></h3>
								<div class="content">
										<%= pageContent.content %>
								</div>
								<div class="comments">
										多说评论
								</div>
						</div>

						<% }else{ %>

						<div class="document">
								<h3 class="title">Can't get ?</h3>
								<div class="content">
										<pre>Something wrong, you may try again.</pre>
										<%= pageContent.content %>
								</div>
						</div>

						<div class="info">
								<h4>Bug Report:</h4>
								<a class="button" href="http://weibo.com/thonatos"><i class="fa fa-weibo"> @Thonatos</i></a>
								<a class="button" href="mailto://thonatos.yang@gmail.com"><i class="fa fa-mail-forward">
												thonatos.yang@gmail.com</i></a>
						</div>

						<% } %>

				</div>
		</div>

</div>

<% include ../tmpl/footer %>

