		<div class="layout">

				<div class="main">
						<% if (pageContent.render){ %>

						<div class="document">
								<h3 class="title"><%= pageContent.title %></h3>
								<div class="content">
										<%- pageContent.content %>
								</div>
								<div class="comments">

								</div>
						</div>

						<% }else{ %>

						<div class="document">
								<h3 class="title">Can't get ?</h3>
								<div class="content">
										<pre>Something wrong, you may try again.</pre>
										<%= pageContent.content %>
								</div>
						</div>

						<div class="info">
								<h4>Bug Report:</h4>
								<a class="button" href="http://weibo.com/thonatos"><i class="fa fa-weibo"> @Thonatos</i></a>
								<a class="button" href="mailto://thonatos.yang@gmail.com"><i class="fa fa-mail-forward">
												thonatos.yang@gmail.com</i></a>
						</div>

						<% } %>

				</div>

				<div class="footer">
						<div class="col-12 center text-right">
								<p>The very beginning mind itself is the most accomplished mind of true enlightenment .</p>
								<p>不忘初心，方得终始。</p>
						</div>
				</div>
		</div>

</div>

