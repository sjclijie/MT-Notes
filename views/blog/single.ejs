<head>

	<% include ../tmpl/header_meta.ejs %>

	<title><%= pageTitle %> - <%= settings.site.name %></title>

	<% include ../tmpl/header_pub.ejs %>

	<link rel="stylesheet" href="/public/css/css-page/posts-single.min.css">

	<!-- GLOBAL JAVASCRIPT -->
	<script>
		PAGE_NAME = 'posts-single';
	</script>

	<% MENU_ACTIVE = 'Blog'; %>

</head>
<body>

<div class="wrap">

	<div class="layout">

		<% include ../tmpl/layout_header.ejs %>

		<div class="main">

			<div class="row posts">

				<!--Post-Content-->
				<div class="col-12">

					<% var post = pageContent.post; %>
					<div class="panel post">
						<div class="panel-header">
							<div class="title">Mood</div>
						</div>
						<div class="panel-body">
							<div class="post-title">
								<h3><a href="/post/<%= post._id %>"><%= post.name %></a></h3>
							</div>
							<div class="post-content">
								<%= post.content %>
							</div>
						</div>
						<div class="panel-footer">
							<div class="post-meta">
								<div class="inner">
									<span class="post-date left"><%= post.date %></span>
									<span class="post-author right"><%= post.author %></span>
								</div>
							</div>
						</div>
					</div>
				</div>

			</div>

		</div>
		<div class="footer">
			<div class="row inner">
				<div class="col-12 center text-right state">
					<p>The very beginning mind itself is the most accomplished mind of true
						enlightenment .</p>

					<p>不忘初心，方得终始。</p>
				</div>
			</div>
		</div>
	</div>

</div>

<% include ../tmpl/footer_pub.ejs %>
<% include ../tmpl/footer_sea.ejs %>

</body>
</html>